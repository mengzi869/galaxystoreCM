<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item
                android:left="5dp"
                android:top="5.5dp"
                android:right="5dp"
                android:bottom="5.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#dbdbdb"/>
                    <corners android:radius="6dp"/>
                    <size
                        android:height="12dp"
                        android:width="30dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="5dp"
                android:top="5.5dp"
                android:right="5dp"
                android:bottom="5.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#a0c2f9"/>
                    <corners android:radius="6dp"/>
                    <size
                        android:height="12dp"
                        android:width="30dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
