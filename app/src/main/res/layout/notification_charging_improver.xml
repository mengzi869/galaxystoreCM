<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/remind_notification_layout"
    android:background="@drawable/bg_reminder_activity"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/chargin_improver_app_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"/>
        <TextView
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charging_optimization"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/chargin_improver_app_icon"/>
        <ImageView
            android:id="@+id/charging_improver_setting"
            android:background="?android:attr/selectableItemBackground"
            android:padding="7dp"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/charging_improver_setting"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            app:tint="#7c7c7c"/>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/charging_improver_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_charging_improver_image"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/charging_improver_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/charging_boost_tip"
        android:maxLines="3"
        android:fontFamily="sans-serif"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/charging_improver_improver"
        android:background="@drawable/shape_blue_improve_button_bg"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:text="@string/improve"
        android:fontFamily="sans-serif"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/charging_improver_later"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:text="@string/improve_later"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
</LinearLayout>
