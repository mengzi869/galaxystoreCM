<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/bg_reminder_activity"
        android:elevation="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/chargin_improver_app_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@mipmap/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/chargin_improver_app_icon"
                android:fontFamily="sans-serif"
                android:text="@string/charging_optimization"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/charging_improver_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="7dp"
                android:src="@mipmap/charging_improver_setting"
                android:visibility="gone"
                app:tint="#7c7c7c" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/charging_improver_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_guide_charging_improver_new" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/charging_improver_lottie"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/charging/data.json"
            app:lottie_imageAssetsFolder="lottie/charging/images"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/charging_improver_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/analyzing_power"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/charging_improver_improver"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_blue_improve_button_bg"
            android:text="@string/improve"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <com.clean888.cleansuper.cleaner.ui.widget.ZZM
            android:id="@+id/charging_improver_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:progress="50"
            android:progressDrawable="@drawable/bg_charging_improve_progressbar"
            android:text="@string/guide_charging_improver_tip" />

        <TextView
            android:id="@+id/charging_improver_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/improve_later"
            android:textAllCaps="true"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
</LinearLayout>
