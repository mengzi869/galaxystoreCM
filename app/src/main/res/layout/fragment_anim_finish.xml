<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/anim_page_bg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_width="116.7dp"
        android:layout_height="116.7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie/finish/anim.json"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="17sp"
        android:textColor="#3e84ff"
        android:gravity="center"
        android:id="@+id/btn_ok"
        android:background="@drawable/shape_finish_anim_next"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:text="@string/nm_ok"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anim"/>
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="17dp"
        android:minHeight="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ok"/>
</androidx.constraintlayout.widget.ConstraintLayout>
