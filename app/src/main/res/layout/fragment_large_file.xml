<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:src="@mipmap/ico_back_dark"
        android:scaleType="centerInside"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/topleft"
        app:layout_constraintEnd_toEndOf="@+id/topleft"
        app:layout_constraintStart_toStartOf="@+id/topleft"
        app:layout_constraintTop_toTopOf="@+id/topleft"
        style="@style/SelectedItemBorderless"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/large_file_title"
        android:layout_marginStart="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/topleft"
        app:layout_constraintEnd_toStartOf="@+id/topright"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/topleft"
        app:layout_constraintTop_toTopOf="@+id/topleft"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ico_menu_more_dark"
        android:scaleType="centerInside"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/topleft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topleft"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/topright"
        app:layout_constraintEnd_toEndOf="@+id/topright"
        app:layout_constraintStart_toStartOf="@+id/topright"
        app:layout_constraintTop_toTopOf="@+id/topright"
        style="@style/SelectedItemBorderless"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guidelinetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="81dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/exp_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinetop">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/exp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/men_type_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_down_dark"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/men_type"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/men_type_arr"
            app:layout_constraintEnd_toEndOf="@+id/men_type_arr"
            app:layout_constraintStart_toStartOf="@+id/men_type_arr"
            app:layout_constraintTop_toTopOf="@+id/men_type_arr"/>
        <View
            android:id="@+id/line1"
            android:background="#f3f3f3"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/line2"
            android:background="#f3f3f3"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp_type"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/btn_bottom"
        android:background="@drawable/btn_page_info_bottom_common"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="15dp"
        android:text="@string/large_file_op_del"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        style="@style/SelectedItemBorderless"/>
</androidx.constraintlayout.widget.ConstraintLayout>