<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/shape_bg_widget"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <FrameLayout
        android:id="@+id/fl_cup_one"
        android:layout_width="70dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_cpu_default"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:id="@+id/tv_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35Â°C"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/tv_cool"
        android:background="@drawable/bg_widget_btn"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:minWidth="64dp"
        android:text="@string/widget_cool"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="15dp"/>
</LinearLayout>
