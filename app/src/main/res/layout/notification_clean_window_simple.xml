<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/remind_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/reminder_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@mipmap/icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/boost_charging_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/unlock_text"
        android:maxLines="3"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"/>
    <Button
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/clean"
        android:background="@drawable/messenger_button_blue_bg_selector"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:src="@mipmap/ic_reminder_security"
        android:minWidth="60dp"
        android:text="@string/reminder_button_clean"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/setting"
        android:background="?android:attr/selectableItemBackground"
        android:padding="7dp"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_small_notify_setting"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        app:tint="#7c7c7c"/>
</LinearLayout>
