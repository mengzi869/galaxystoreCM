<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/remind_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/reminder_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@mipmap/icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:id="@+id/reminder_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/reminder_image"
        android:layout_alignParentEnd="true"/>
    <Button
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/reminder_button"
        android:background="@drawable/messenger_button_blue_bg_selector"
        android:layout_width="74dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_reminder_security"
        android:text="@string/reminder_button_clean"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"/>
</LinearLayout>
